<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <title>Criar Conta</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="/javascript/jQuery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <section class="header">
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
          <a class="navbar-brand" href="../principal nao logado/principal.html">Sistema Transporte Web</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" 
          data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" 
          aria-label="Toggle navigation">
            <i class="fa fa-bars"></i>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto text-right">
              <li class="nav-item">
                <a class="nav-link active-home" href="../principal nao logado/principal.html">HOME</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="../consulta nao logado/consulta corrida.html">CONSULTA</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">NOS CONTATE</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/">LOGIN</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/register">REGISTRAR-SE</a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </section>
    <section class="service">
      <div class="container">
        <h2 class="title">
          Criar conta
        </h2>
        <p></p>
        <div class="text-center">
          <button class="btn btn-primary" type="submit" onclick="mostrarFisico()">Físico</button>
          <script >
            function mostrarFisico(){
              document.getElementById('user-fisico').style.visibility = 'visible';
              document.getElementById('user-juridico').style.visibility = 'hidden';
          }
          </script>
          <button class="btn btn-primary" type="submit" onclick="mostrarJuridico()">Jurídico</button>
          <script >
          function mostrarJuridico(){
            document.getElementById('user-juridico').style.visibility = 'visible';
            document.getElementById('user-fisico').style.visibility = 'hidden';
        }
          </script>
        </div>
        <p></p>
        <form id="user-fisico" action="/auth/register" method="POST" style = "visibility: hidden;">
          <div class="row justify-content-md-center">
            <div class="col-md-4 mb-3">
              <label for="name">Nome:</label>
              <input type="text" class="form-control" id="name" placeholder="Marcos Paulo" name='name' >
            </div>
            <div class="col-md-4 mb-3">
              <label for="cep">CEP:</label>
              <input type="number" class="form-control" id="cep" placeholder="10022-900" name='cep' required onkeypress="$(this).mask('00000-000'); ">
            </div>
          </div>
          <div class="row justify-content-md-center">
            <div class="col-md-4 mb-3">
              <label for="telefone">Telefone:</label>
              <input type="number" class="form-control" id="telefone" placeholder="(44)99945-0733" name='telefone' >
            </div>
            <div class="col-md-4 mb-3">
              <label for="cpf">CPF:</label>
              <input type="number" class="form-control" id="CPF" placeholder="100.477.831-11" name='cpf' >
            </div>
          </div>
          <div class="row justify-content-md-center">
            <div class="col-md-4 mb-3">
              <label for="email">Email:</label>
              <input type="email" class="form-control" id="email" placeholder="marcos-paulo@gmail.com" name='email' >
            </div>
            <div class="col-md-4 mb-3">
              <label for="senha">Senha:</label>
              <input type="password" class="form-control" id="password" aria-describedby="validationServer05Feedback" name='senha' >
            </div>
            
            </div>
            <div class="row justify-content-md-center">
            <div class="col-md-3 mb-2" >
              <label for="senha1">Confirmar Senha:</label>
              <input type="password" class="form-control" id="password1" aria-describedby="validationServer05Feedback" name='senha1' >
            </div>
            </div>

          <div class="text-center">
            <button class="btn btn-primary" type="submit">Registrar-se</button>
          </div>
          {{#if message  }}
          <h4 class="alert alert-danger mt-4">{{message}}</h4>
          {{/if}}
        </form>
        <form id="user-juridico" action="/auth/register" method="POST" style = "visibility: hidden;">
          <div class="row justify-content-md-center">
            <div class="col-md-4 mb-3">
              <label for="validationServer01">Nome:</label>
              <input type="text" class="form-control" id="nome2" placeholder="G10" >
            </div>
            <div class="col-md-4 mb-3">
              <label for="validationServer02">CEP:</label>
              <input type="number" class="form-control" id="cep2" placeholder="10022-409" >
            </div>
          </div>
          <div class="row justify-content-md-center">
            <div class="col-md-4 mb-3">
              <label for="validationServer02">Telefone:</label>
              <input type="tel" class="form-control" id="telefone2" placeholder="(44)3225-8759" >
            </div>
            <div class="col-md-4 mb-3">
              <label for="validationServer02">CNPJ:</label>
              <input type="number" class="form-control" id="cnpj" placeholder="99.999.999/9999-99" >
            </div>
          </div>
          <div class="row justify-content-md-center">
            <div class="col-md-4 mb-3">
              <label for="validationServer04">Email:</label>
              <input type="email" class="form-control" id="email2" placeholder="g10.transporte@gmail.com" >
            </div>
            <div class="col-md-4 mb-3">
              <label for="validationServer05">Senha:</label>
              <input type="password" class="form-control" id="senha2" aria-describedby="validationServer05Feedback" >
            </div>
            </div>
            <div class="row justify-content-md-center">
            <div class="col-md-3 mb-2" >
              <label for="senha1">Confirmar Senha:</label>
              <input type="password" class="form-control" id="senha3" aria-describedby="validationServer05Feedback" name='passwordConfirm'>
            </div>
            </div>
            <div class="text-center">
              <button class="btn btn-primary" type="submit">Registrar-se</button>
          </div>
        </form>
      </div>
      {{#if message  }}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>
      {{/if}}
    </section>
  </body>
</html>