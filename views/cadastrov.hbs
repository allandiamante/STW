        <section class="service3">
            <form class="needs-validation" action="/auth/cadastrov" method="POST" novalidate>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                      <label for="nomeprop">Nome do Proprietario:</label>
                      <input type="text" class="form-control" id="nomeprop" name="nomeprop" value="" required>
                      <div class="valid-feedback">
                        Correto!
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="nomepropsob">Sobrenome do Proprietario:</label>
                      <input type="text" class="form-control" id="nomepropsob" name="nomepropsob" value="" required>
                      <div class="valid-feedback">
                        Correto!
                      </div>
                    </div>                    
                  </div>
                  <div class="form-row">
                    <div class="col-md-6 mb-3">
                      <label for="cidade">Cidade:</label>
                      <input type="text" class="form-control" id="cidade" name="cidade" required>
                      <div class="invalid-feedback">
                        Cidade inválida.
                      </div>
                    </div>
                    <div class="col-md-3 mb-3">
                      <label for="estado">Estado:</label>
                      <select class="custom-select" id="estado" name="estado" required>
                        <option selected disabled value="">Escolha...</option>
                        <option>Acre (AC)</option>
                        <option>Alagoas (AL)</option>
                        <option>Amapá (AP)</option>
                        <option>Amazonas (AM)</option>
                        <option>Bahia (BA)</option>
                        <option>Ceará (CE)</option>
                        <option>Distrito Federal (DF)</option>
                        <option>Espírito Santo (ES)</option>
                        <option>Goiás (GO)</option>
                        <option>Maranhão (MA)</option>
                        <option>Mato Grosso (MT)</option>
                        <option>Mato Grosso do Sul (MS)</option>
                        <option>Minas Gerais (MG)</option>
                        <option>Pará (PA)</option>
                        <option>Paraíba (PB)</option>
                        <option>Paraná (PR)</option>
                        <option>Pernambuco (PE)</option>
                        <option>Piauí (PI)</option>
                        <option>Rio de Janeiro (RJ)</option>
                        <option>Rio Grande do Norte (RN)</option>
                        <option>Rio Grande do Sul (RS)</option>
                        <option>Rondônia (RO)</option>
                        <option>Roraima (RR)</option>
                        <option>Santa Catarina (SC)</option>
                        <option>São Paulo (SP)</option>
                        <option>Sergipe (SE)</option>
                        <option>Tocantins (TO)</option>
                      </select>
                    </div>
                    <div class="col-md-3 mb-3">
                      <label for="placa">Placa:</label>
                      <input type="text" class="form-control" id="placa" name="placa" required>
                      <div class="invalid-feedback">
                        Placa de veículo inválido.
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="form-check">
                      <div class="invalid-feedback">
                        You must agree before submitting.
                      </div>
                    </div>
                  </div>
                  <div class="form-row" style="margin-top: -10 !important">
                    <div class="col-md-6 mb-3">
                      <label for="modveicul">Modelo do Veículo:</label>
                      <input type="text" class="form-control" id="modveicul" name="modveicul" required>
                      <div class="invalid-feedback">
                        Modelo não encontrado.
                      </div>
                    </div>                    
                    <div class="col-md-6 mb-3">
                      <label for="idfrota">Frota</label>
                      <select class="custom-select" id="idfrota" name="idfrota" required>
                        <option selected disabled value="">Escolha...</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                      </select>
                      <div class="invalid-feedback">
                        Frota não selecionada.
                      </div>                      
                    </div>
                    <div class="form-row" style="margin-top: 0 !important; ">
                      <div class="col-md-12 mb-3">
                        <label for="chassi">Número de Chassi:</label>
                        <input type="text" class="form-control" id="chassi" name="chassi" required>
                        <div class="invalid-feedback">
                          Modelo não encontrado.
                        </div>
                      </div>
                                          
                    <div class="col-md-3 mb-3">
                        <button type="button" style="margin-top: 15 !important; margin-left: 1350 !important;" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal3">
                            Nova Frota
                          </button>                          
                          <!-- Modal -->
                          <div class="modal fade" id="exampleModal3" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLabel">Nova Frota</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <form>
                                    <div class="row" style="margin-left: 10 !important; margin-right: 10 !important;">
                                      <div class="col">
                                        <input type="text" class="form-control" placeholder="Nome da Frota:">
                                      </div>
                                      <div class="col">
                                        <input type="text" class="form-control" placeholder="Tipo da Frota:">
                                      </div>
                                    </div>
                                  </form>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-primary">Salvar</button>
                                </div>
                              </div>
                          </div>
                        </div>
                        
                  <div class="form-group" style="margin-left: 50 !important; padding-right: 50 !important;">
                    <div class="form-check">
                      <div class="invalid-feedback">
                        You must agree before submitting.
                      </div>
                    </div>
                  </div>
                  
                <button class="btn btn-primary" type="submit">Cadastrar</button>
              </form>
              {{#if message  }}
                <h4 class="alert alert-danger mt-4">{{message}}</h4>
              {{/if}}
                      
              <script>
              // Example starter JavaScript for disabling form submissions if there are invalid fields
              (function() {
                'use strict';
                window.addEventListener('load', function() {
                  // Fetch all the forms we want to apply custom Bootstrap validation styles to
                  var forms = document.getElementsByClassName('needs-validation');
                  // Loop over them and prevent submission
                  var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                      if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                      }
                      form.classList.add('was-validated');
                    }, false);
                  });
                }, false);
              })();
              </script>
